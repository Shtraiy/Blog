.post-list
  padding: 0

  .post-item
    margin-bottom: 1rem
    margin-left: 0
    list-style-type: none

    a:hover
      background: linear-gradient(#e35522,#dece1b)
      -webkit-background-clip: text
      color: transparent

    .meta
      display: block
      margin-right: 16px
      min-width: 100px
      color: $color-meta
      font-size: 16px
#about
  p
    background: linear-gradient(#31d6c3,#3191d6)
    -webkit-background-clip: text
    color: transparent
    font-size: 20px
    margin-top: 0
    margin-bottom: 0

@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      margin-bottom: 5px

      .meta
        text-align: left

.project-list
  padding: 0
  list-style: none

  .project-item
    margin-bottom: 5px
    p
      display: inline

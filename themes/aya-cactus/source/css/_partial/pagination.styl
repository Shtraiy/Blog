.pagination
  display: inline-block
  margin-top: 1rem
  width: 100%
  text-align: center

  .page-number
    color: $color-text
    position: relative
    font-size: .8rem
    bottom: 2px

  a
    padding: 4px 6px
    border-radius: 5px
    // background-color: $color-accent-1
    background-image: none
    color: $color-text
    text-decoration: none

    i:hover
      background: linear-gradient(#cf1da5,#e62991)
      -webkit-background-clip: text
      color: transparent


  a:hover
    background-image: none

  a:hover:not(.active)
    color: $color-accent-2
